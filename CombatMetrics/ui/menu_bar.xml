<GuiXml xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://sir.insidi.at/or/schema/esoui.xsd">
    <Controls>
        <Texture name="CombatMetrics_SelectorButton" virtual="true" layer="CONTROLS">
            <Dimensions x="32" y="32" />
        </Texture>

        <Control name="CombatMetrics_Menubar" resizeToFitDescendents="true" layer="BACKGROUND" virtual="true">
            <ResizeToFitPadding width="8" height="8" />
            <Controls>
                <Texture name="$(parent)DamageOutButton" mouseEnabled="true"
                    textureFile="/esoui/art/icons/heraldrycrests_weapon_axe_02.dds" color="FFFFCCCC"
                    inherits="CombatMetrics_TextureTooltip CombatMetrics_SelectorButton">
                    <Anchor point="TOP" offsetY="4" />
                    <OnInitialized>
                        self.tooltip = {SI_COMBAT_METRICS_DAMAGE_CAUSED}
                        self.category = "damageOut"
                        self.isMainCategory = true
                    </OnInitialized>
                </Texture>

                <Texture name="$(parent)HealingOutButton" mouseEnabled="true"
                    textureFile="/esoui/art/buttons/gamepad/gp_plus_large.dds" color="FFCCFFCC"
                    inherits="CombatMetrics_TextureTooltip CombatMetrics_SelectorButton">
                    <Anchor point="TOP" relativePoint="BOTTOM" relativeTo="$(parent)DamageOutButton" offsetY="4" />
                    <OnInitialized>
                        self.tooltip = {SI_COMBAT_METRICS_HEALING_DONE}
                        self.category = "healingOut"
                        self.isMainCategory = true
                    </OnInitialized>
                </Texture>

                <Texture name="$(parent)DamageInButton" mouseEnabled="true"
                    textureFile="/esoui/art/icons/heraldrycrests_weapon_shield_01.dds" color="FFCCCCFF"
                    inherits="CombatMetrics_TextureTooltip CombatMetrics_SelectorButton">
                    <Anchor point="TOP" relativePoint="BOTTOM" relativeTo="$(parent)HealingOutButton" offsetY="4" />
                    <OnInitialized>
                        self.tooltip = {SI_COMBAT_METRICS_DAMAGE_RECEIVED}
                        self.category = "damageIn"
                        self.isMainCategory = true
                    </OnInitialized>
                </Texture>

                <Texture name="$(parent)HealingInButton" mouseEnabled="true"
                    textureFile="/esoui/art/hud/gamepad/gp_radialicon_invitegroup_down.dds" color="FFFFFFCC"
                    inherits="CombatMetrics_TextureTooltip CombatMetrics_SelectorButton">
                    <Anchor point="TOP" relativePoint="BOTTOM" relativeTo="$(parent)DamageInButton" offsetY="4" />
                    <OnInitialized>
                        self.tooltip = {SI_COMBAT_METRICS_HEALING_RECEIVED}
                        self.category = "healingIn"
                        self.isMainCategory = true
                    </OnInitialized>
                </Texture>

                <Texture name="$(parent)FightStatsButton" mouseEnabled="true"
                    textureFile="esoui/art/menubar/gamepad/gp_playermenu_icon_skills.dds" color="FFFFFFFF"
                    inherits="CombatMetrics_TextureTooltip CombatMetrics_SelectorButton">
                    <Anchor point="TOP" relativePoint="BOTTOM" relativeTo="$(parent)HealingInButton" offsetY="30" />
                    <OnInitialized>
                        self.tooltip = {SI_COMBAT_METRICS_TOGGLE_FIGHTSTATS}
                        self.category = "FightStats"
                        self.isSecondaryCategory = true
                    </OnInitialized>
                </Texture>

                <Texture name="$(parent)CombatLogButton" mouseEnabled="true"
                    textureFile="esoui/art/guild/gamepad/gp_guild_menuicon_roster.dds" color="33FFFFFF"
                    inherits="CombatMetrics_TextureTooltip CombatMetrics_SelectorButton">
                    <Anchor point="TOP" relativePoint="BOTTOM" relativeTo="$(parent)FightStatsButton" offsetY="4" />
                    <OnInitialized>
                        self.tooltip = {SI_COMBAT_METRICS_TOGGLE_COMBAT_LOG}
                        self.category = "CombatLog"
                        self.isSecondaryCategory = true
                    </OnInitialized>
                </Texture>

                <Texture name="$(parent)GraphButton" mouseEnabled="true"
                    textureFile="esoui/art/treeicons/gamepad/gp_tutorial_idexicon_charprogression.dds" color="33FFFFFF"
                    inherits="CombatMetrics_TextureTooltip CombatMetrics_SelectorButton">
                    <Anchor point="TOP" relativePoint="BOTTOM" relativeTo="$(parent)CombatLogButton" offsetY="4" />
                    <OnInitialized>
                        self.tooltip = {SI_COMBAT_METRICS_TOGGLE_GRAPH}
                        self.category = "Graph"
                        self.isSecondaryCategory = true
                    </OnInitialized>
                </Texture>

                <Texture name="$(parent)InfoButton" mouseEnabled="true"
                    textureFile="esoui/art/menubar/gamepad/gp_playermenu_icon_tutorial.dds" color="FFFFFFFF"
                    inherits="CombatMetrics_TextureTooltip CombatMetrics_SelectorButton">
                    <Anchor point="TOP" relativePoint="BOTTOM" relativeTo="$(parent)GraphButton" offsetY="4" />
                    <OnInitialized>
                        self.tooltip = {SI_COMBAT_METRICS_TOGGLE_INFO}
                        self.category = "Info"
                        self.isSecondaryCategory = true
                    </OnInitialized>
                </Texture>

                <Texture name="$(parent)SettingsButton" mouseEnabled="true"
                    textureFile="esoui/art/tutorial/gamepad/gp_playermenu_icon_settings.dds" color="FFFFFFFF"
                    inherits="CombatMetrics_TextureTooltip CombatMetrics_SelectorButton">
                    <Anchor point="TOP" relativePoint="BOTTOM" relativeTo="$(parent)InfoButton" offsetY="30" />
                    <OnInitialized>
                        self.tooltip = {SI_COMBAT_METRICS_TOGGLE_SETTINGS}
                        self.category = "Settings"
                    </OnInitialized>
                    <OnMouseUp> CMX.SettingsContextMenu( self, upInside ) </OnMouseUp>
                </Texture>

                <Texture name="$(parent)FeedbackButton" mouseEnabled="true" textureFile="CombatMetrics/icons/addonlogo.dds"
                    color="FFFFC52A" inherits="CombatMetrics_TextureTooltip CombatMetrics_SelectorButton">
                    <Anchor point="TOP" relativePoint="BOTTOM" relativeTo="$(parent)SettingsButton" offsetY="8" />
                    <OnInitialized>
                        self.tooltip = {SI_COMBAT_METRICS_FEEDBACK}
                        self.category = "Feedback"
                    </OnInitialized>
                    <OnMouseUp> CMX.FeedbackContextMenu( self, upInside ) </OnMouseUp>
                </Texture>

                <Texture name="$(parent)NotificationButton" mouseEnabled="true"
                    textureFile="esoui/art/mainmenu/menubar_notifications_down.dds" color="FFFFFFFF"
                    inherits="CombatMetrics_TextureTooltip CombatMetrics_SelectorButton" hidden="true">
                    <Anchor point="TOP" relativePoint="BOTTOM" relativeTo="$(parent)FeedbackButton" offsetY="8" />
                    <OnInitialized>
                        self.tooltip = {SI_COMBAT_METRICS_NOTIFICATION}
                        self.category = "Notification"
                    </OnInitialized>
                    <OnMouseUp> CMX.NotificationContextMenu( self, upInside ) </OnMouseUp>
                </Texture>

                <Backdrop name="$(parent)BG" inherits="CombatMetrics_BackgroundFramed_Solid" excludeFromResizeToFitExtents="true"
                    edgeColor="FF000000" centerColor="EE000000">
                    <AnchorFill />
                </Backdrop>
            </Controls>
        </Control>
    </Controls>
</GuiXml>