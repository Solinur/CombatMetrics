<GuiXml xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://sir.insidi.at/or/schema/esoui.xsd">
    <Controls>
        <Control name="CombatMetrics_InfoRow" virtual="true">
            <Controls>
                <Label name="$(parent)DateTime" inherits="CombatMetrics_ValueFontControl" text="" horizontalAlignment="LEFT">
                    <Anchor point="LEFT" />
                    <Dimensions x="296" y="20" />
                </Label>

                <Label name="$(parent)ESOVersion" inherits="CombatMetrics_StatRowLabel" text="" horizontalAlignment="RIGHT">
                    <Anchor point="RIGHT" offsetX="-2" />
                    <Dimensions x="296" y="20" />
                </Label>

                <Label name="$(parent)Performance" inherits="CombatMetrics_ValueFontControl" text="" horizontalAlignment="CENTER"
                    hidden="true">
                    <Anchor point="LEFT" relativePoint="RIGHT" relativeTo="$(parent)DateTime" offsetX="4" />
                    <Anchor point="RIGHT" relativePoint="LEFT" relativeTo="$(parent)ESOVersion" offsetX="-4" />
                    <Dimensions y="20" />
                </Label>

                <StatusBar name="$(parent)Bar" orientation="HORIZONTAL" color="CCBBBB77">
                    <Anchor point="LEFT" relativePoint="RIGHT" relativeTo="$(parent)DateTime" offsetX="24" />
                    <Anchor point="RIGHT" relativePoint="LEFT" relativeTo="$(parent)ESOVersion" offsetX="-24" />
                    <Dimensions y="20" />
                    <Limits min="0" max="1" />
                    <Controls>
                        <Label name="$(parent)Label" inherits="CombatMetrics_StatRowLabel" text="" horizontalAlignment="CENTER">
                            <AnchorFill />
                        </Label>

                        <Backdrop name="$(parent)BarBg" centerColor="00000000" edgeColor="FFCCCCCC" layer="CONTROLS" level="1"
                            inherits="CombatMetrics_BackgroundFramed">
                            <AnchorFill />
                        </Backdrop>
                    </Controls>
                </StatusBar>
            </Controls>
        </Control>
    </Controls>
</GuiXml>