<GuiXml xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://sir.insidi.at/or/schema/esoui.xsd">
    <Controls>
        <Control name="CombatMetrics_TitleBar" virtual="true">
            <Controls>
                <Line name="$(parent)Sep" color="SI_COMBAT_METRICS_SEP_COLOR" inherits="CombatMetrics_Line">
                    <Anchor point="BOTTOMLEFT" />
                    <Anchor point="BOTTOMRIGHT" />
                </Line>

                <Control name="$(parent)CharacterInfo" resizeToFitDescendents="true">
                    <Anchor point="TOPLEFT" />
                    <Anchor point="BOTTOMLEFT" />
                    <Controls>
                        <Texture name="$(parent)RaceIcon" textureFile="esoui/art/champion/champion_icon.dds"
                            inherits="CombatMetrics_TextureTooltip">
                            <Anchor point="LEFT" />
                            <Dimensions x="34" y="34" />
                        </Texture>

                        <Texture name="$(parent)ClassIcon" textureFile="esoui/art/champion/champion_icon.dds"
                            inherits="CombatMetrics_TextureTooltip">
                            <Anchor point="LEFT" relativePoint="RIGHT" relativeTo="$(parent)RaceIcon" offsetX="-2" />
                            <Dimensions x="34" y="34" />
                        </Texture>

                        <Label name="$(parent)Charname" inherits="CombatMetrics_InfoFontControl">
                            <Anchor point="LEFT" relativePoint="RIGHT" relativeTo="$(parent)ClassIcon" offsetX="4" />
                        </Label>

                        <Texture name="$(parent)CPIcon" textureFile="esoui/art/champion/champion_icon.dds">
                            <Anchor point="LEFT" relativePoint="RIGHT" relativeTo="$(parent)Charname" offsetX="10" />
                            <Dimensions x="20" y="20" />
                        </Texture>

                        <Label name="$(parent)CPValue" inherits="CombatMetrics_InfoFontControl">
                            <Anchor point="LEFT" relativePoint="RIGHT" relativeTo="$(parent)CPIcon" offsetX="4" />
                        </Label>
                    </Controls>
                </Control>

                <Control name="$(parent)FightTitle" mouseEnabled="true" inherits="CombatMetrics_ControlTooltip">
                    <Anchor point="TOPLEFT" relativePoint="TOPRIGHT" relativeTo="$(parent)CharacterInfo" offsetX="8" />
                    <Anchor point="BOTTOMRIGHT" offsetX="-4" />
                    <Controls>
                        <Label name="$(parent)Name" inherits="CombatMetrics_TitleFontControl" text="Test"
                            verticalAlignment="CENTER" horizontalAlignment="CENTER">
                            <Anchor point="LEFT" />
                            <Anchor point="RIGHT" />
                        </Label>

                        <EditBox name="$(parent)Edit" hidden="true" inherits="ZO_DefaultEdit">
                            <Anchor point="LEFT" />
                            <Anchor point="RIGHT" />
                        </EditBox>

                        <StatusBar name="$(parent)Bar" orientation="HORIZONTAL" color="CC00BB00" hidden="true">
                            <Anchor point="TOPLEFT" offsetX="20" offsetY="4" />
                            <Anchor point="BOTTOMRIGHT" offsetX="-20" offsetY="-6" />
                            <Limits min="0" max="1" />
                            <Controls>
                                <Backdrop name="$(parent)BarBg" centerColor="00000000" edgeColor="FFCCCCCC" layer="CONTROLS"
                                    level="1">
                                    <AnchorFill />
                                    <Edge edgeSize="1" />
                                </Backdrop>
                            </Controls>
                        </StatusBar>
                    </Controls>

                    <OnMouseDown>
                        CombatMetricsReport:StartMoving()
                    </OnMouseDown>
                </Control>
            </Controls>
        </Control>
    </Controls>
</GuiXml>